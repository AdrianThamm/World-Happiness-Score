{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 3600,
    "data": {"url": "data/world-happiness-report.csv"},
    "config": {
      "axis": {
        "tickBand": "extent",
        "grid": true,
        "gridColor": "#white",
        "domainWidth": 1
      },
      "background": "#f7f7f7"
    },
    "encoding": {
      "x": {
        "field": "year",
        "type": "ordinal",
        "title": "Year",
        "axis": {
          "labelAngle": 0,
          "labelFontSize": 16,
          "titleFontSize": 18,
          "titleFont": "Source Sans Pro",
          "labelFont": "Source Sans Pro"
        }
      },
      "y": {
        "field": "Country",
        "type": "nominal",
        "axis": {
          "labelFontSize": 16,
          "titleFontSize": 18,
          "titleFont": "Source Sans Pro",
          "labelFont": "Source Sans Pro"
        }
      }
    },
    "layer": [
      {"mark": {"type": "rect", "fill": "#e6e4e6", "stroke": "#f7f7f7"}},
      {
        "params": [
          {"name": "highlight", "select": {"type": "point", "on": "mouseover"}}
        ],
        "mark": "rect",
        "encoding": {
          "color": {
            "field": "Freedom to make life choices",
            "type": "quantitative",
            "legend": {
                "title": ["The extend which ", "freedom to make life ", "choices contributes to ", "happiness score"],
                "labelFontSize": 14,
                "symbolSize": 200,
                "titleFontSize": 16,
                "labelLimit": 500,
                "titleFont": "Source Sans Pro",
                "labelFont": "Source Sans Pro"
            },
            "scale": {"scheme": "yellowgreenblue"}
          },
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "Life Ladder", "type": "quantitative"},
            {"field": "Freedom to make life choices", "type": "quantitative"}
          ],
          "fillOpacity": {
            "condition": [{"param": "highlight", "value": 1}],
            "value": 0.3
          }
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": 10,
          "fontSize": 12,
          "font": "Source Sans Pro"
        },
        "encoding": {
          "text": {"field": "Freedom to make life choices", "type": "quantitative"},
          "color": {
            "condition": [
            {
              "test": "datum['Freedom to make life choices'] >=0.5",
              "value": "white"
            }
          ],
          "value": "black"
        }
        }
      }
    ]
  }